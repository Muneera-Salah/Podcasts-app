<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.anrdoid.podcastapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LanguagesActivity"
            android:label="@string/languages_category" />
        <activity
            android:name=".ProgrammingActivity"
            android:label="@string/programming_category" />

        <activity
            android:name=".FinanceActivity"
            android:label="@string/Finance_category" />

        <activity
            android:name=".HistoryActivity"
            android:label="@string/history_category" />

        <activity
            android:name=".SciencesActivity"
            android:label="@string/sciences_category" />

        <activity
            android:name=".SpaceActivity"
            android:label="@string/space_category" />

        <activity
            android:name=".SportActivity"
            android:label="@string/sport_category" />

        <activity
            android:name=".PolicyActivity"
            android:label="@string/policy_category" />

        <activity
            android:name=".PlayPodcastActivity"
            android:label="Play Podcast" />

    </application>

</manifest>